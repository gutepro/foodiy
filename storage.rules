rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Recipe cover images: allow public read; writes only by owner uid.
    match /recipe_covers/{uid}/{all=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Recipe source documents (PDF/DOC/images): owner-only read/write.
    match /recipe_docs/{uid}/{all=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Chef avatars: public read, owner write.
    match /chef_avatars/{uid}/{all=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Default deny everything else.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
